{% if product != empty %}
    <script type="application/json" data-product-json>
        {{ product | json }}
    </script>
  {% comment %} {% render 'recently-viewed' %} {% endcomment %}
{% endif %}
{% schema %}
    {
        "name": "recently",
        "class": "recently-viewed",
        "settings": [
            {
                "type": "text",
                "id":"heading-view",
                "default":"add new heading",
                "label":"Heading View"
            },
            {
                "type": "number",
                "id": "padding-recently",
                "label":"Padding view"
            },
            {
                "type": "number",
                "id": "paginate-view",
                "label": "Paginate view"
            }
        ],
        "presets": [
            {
                "name": "Recently Viewed"
            }
        ]
    }
{% endschema %}