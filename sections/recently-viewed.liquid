<link rel="stylesheet" href="{{ 'recently-viewed.css' | asset_url }}">
<script src="{{ 'recently-viewed.js' | asset_url }}" defer="defer"></script>
{% unless product == empty %}
    <script type="application/json" data-product-json>
        {{ product | json }}
    </script>
{% endunless %}
<script id="RecentProductItemScript" type="text/x-handlebars-template">
  {% render 'recently-viewed' %}
</script>

{% schema %}
    {
        "name": "recently",
        "class": "recently-viewed",
        "settings": [
            {
                "type": "text",
                "id":"heading-view",
                "default":"add new heading",
                "label":"Heading View"
            },
            {
                "type": "number",
                "id": "padding-recently",
                "label":"Padding view"
            },
            {
                "type": "number",
                "id": "paginate-view",
                "label": "Paginate view"
            }
        ],
        "presets": [
            {
                "name": "Recently Viewed"
            }
        ]
    }
{% endschema %}