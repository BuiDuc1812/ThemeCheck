<section class="container recently-viewed" paginate>
    <h3 class="heading-recently"></h3>
  <div class="swiper swiper-recently-viewed">
    <div class="swiper-wrapper">
      <div class="swiper-slide viewed-item">

      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Recent Products",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Recently Viewed",
        "label": "Title"
      }, {
        "type": "number",
        "id": "paginate-recently",
        "label": "Paginate recently"
      }, {
        "type": "range",
        "id":"padding-recently-viewed",
        "default": 80,
        "min": 0,
        "max": 100,
        "label": "Padding recently"
      }
    ],
    "presets": [
      {
        "name": "Recent Products"
      }
    ]
  }
{% endschema %}