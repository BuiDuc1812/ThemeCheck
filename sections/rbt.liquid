<link rel="stylesheet" href="{{ 'rbt-style.css' | asset_url }}">
{% comment %} <script src="{{ 'swiper-banner.js' | asset_url }}" defer="defer"></script> {% endcomment %}
<section 
    style="background-color: {{ section.settings.color-fill-bg }};color: {{ section.settings.color-fill-text }};"
    class="rbt"
>
        <div class="swiper swiper-rbt container">
            <div class="swiper-wrapper wrapper-rbt">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'rtb' %}
                            <div class="swiper-slide custom-slide">
                                <img loading="lazy" width="24" height="24" src="" alt="">
                                <a href="{%- if section.settings.rbt-slide1-url -%}{{ section.settings.rbt-slide1-url }}{% else %} # {% endif %}"> 
                                    {{ section.settings.rbt-slide1 | escape }}
                                </a>
                            </div>    
                    {% endcase %}
                {% endfor %}
                
            </div>
        </div>
</section>

{% schema %}
    {
        "name":"rbt",
        "class":"rbt",
        "blocks": [
            {
                "type":"rtb",
                "name":"RTB link",
                "settings": [
                    {
                    "type": "color",
                    "id": "color-fill-bg",
                    "label": "Color fill background"
                    },
                    {
                        "type": "color",
                        "id":"color-fill-text",
                        "label": "Color fill text"
                    },
                    {
                        "type":"text",
                        "id":"rbt-slide1",
                        "default": "Easy Returns",
                        "label":"Rbt text 1"
                    },
                    {
                        "type":"url",
                        "id":"rbt-slide1-url",
                        "label":"Rbt url 1"
                    }
                ]
            }
        ]
    }
{% endschema %}