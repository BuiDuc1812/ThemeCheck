<script src="{{ 'swiper-banner.js' | asset_url }}" defer="defer"></script>
<section class="banner-homeqage">
  <div class="swiper swiper-banner">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'img' %}
          <div class="swiper-slide">
            <a class="banner-link-desk" href="
              {% if block.settings.link-banner != blank %}
              {{ block.settings.link-banner }}
              {% else %}
              #
              {% endif %}">
              {% if block.settings.img-banner-desk != blank %}
                {{ block.settings.img-banner-desk | image_url: width: 3840 | image_tag:
                  loading: 'lazy',
                  class: 'img-banner-desk' , 
                  alt: ""
                }}
              {% endif %}
            </a>
            <a class="banner-link-mobile" href="
            {% if block.settings.link-banner != blank %}
              {{ block.settings.link-banner }}
              {% else %}
              #
              {% endif %}">
               {% if block.settings.img-banner-mobile != blank %}
                {{ block.settings.img-banner-mobile | image_url: width: 3840 | image_tag:
                  loading: 'lazy',
                  class: 'img-banner-mobile'
                }}
              {% endif %}
            </a>
           
          </div>
        {% endcase %}
      {% endfor %}
    </div>
    <div class="swiper-button-next"> </div>
    <div class="swiper-button-prev"> </div>
  </div>
</section>
{% schema %}
  {   
    "name": "Banner Image",
    "class": "banner-homepage",
    "blocks": [
      {
        "type": "img",
        "name": "image silde",
        "settings": [
          {
            "type": "image_picker",
            "id": "img-banner-desk",
            "label": "Img banner desk"
          }, 
          {
            "type": "image_picker",
            "id": "img-banner-mobile",
            "label": "Img banner mobile"
          },
          {
            "type": "url",
            "id": "link-banner",
            "label": "Banner link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image banner",
        "blocks": [
          {
            "type": "img"
          }
        ]
      }
    ]
  }
{% endschema %}