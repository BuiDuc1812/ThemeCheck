<section style="width: 100%; height:42px;">
  <div class="width-page">
    <p>{{ section.settings.pickup-text }}</p>
    <a href="{{ section.settings.link }}">{{ section.settings.pickup-text }}</a>
  </div>
</section>
{% schema %}
  {
    "name": "announcement-bar",
    "class": "announcement-new",
    "settings": [
      {
        "type": "text",
        "id": "pickup-text",
        "default": "In-store pickup",
        "label": "pick up text"
      }, {
        "type": "url",
        "id": "link",
        "label": "link"
      }
    ],
    "presets": [
      {
        "category": "hero",
        "name": "simple hero"
      }
    ]
  }
{% endschema %}